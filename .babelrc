{
  "presets": [
    "es2015",
    "react",
    "stage-1"
  ],
  "plugins": [
    /* flow support */
    "transform-flow-strip-types",
    /* ~/path/to/file support */
    ["babel-root-import", {
      "rootPathSuffix": "src/client"
    }],
    /* enables async/await */
    "transform-runtime"
  ],
  "env": {
    "development": {
      "presets": [
        "react-hmre"
      ]
    }
  }
}
