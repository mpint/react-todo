{
  "name": "react-redux-koa2-boilerplate",
  "version": "0.0.0",
  "author": "Michael Pinter",
  "engines": {
    "node": ">=6"
  },
  "description": "React/Redux/koa2 boilerplate",
  "scripts": {
    "start": "pm2 kill; npm-run-all --parallel remove-dist test:client:watch client:dev server:dev",
    "start:prod": "npm-run-all build server:prod",
    "server:dev": "node-inspector & nodemon src/server/bin/server.js",
    "server:prod": "pm2 start pm2.json",
    "server:browsersync": "babel-node tools/srcServer.js",
    "client:dev": "npm-run-all get-revision server:browsersync",
    "prebuild": "npm-run-all clean-dist build:html lint test",
    "build": "npm-run-all --parallel get-revision build:client build:server",
    "build:client": "babel-node tools/build.js",
    "build:server": "babel src/server -d dist -s",
    "build:html": "babel-node tools/buildHtml.js",
    "open:prod": "node tools/openProduction.js",
    "lint": "esw src",
    "autolint": "node_modules/.bin/eslint --ext .js --fix src",
    "clean-dist": "npm run remove-dist && mkdir dist",
    "remove-dist": "rimraf ./dist",
    "get-revision": "./tools/get-revision.sh",
    "preversion": "npm test && npm run lint",
    "postversion": "git push && git push --tags",
    "test": "npm-run-all --parallel test:client test:server",
    "test:client": "jest",
    "test:client:watch": "npm run test:client -- --watch",
    "test:server:file": "NODE_ENV=tests mocha --compilers js:babel-register --timeout 5000 --require src/server/config/test --",
    "test:server": "npm run test:server:file src/server/**/**/__tests__/*.js",
    "test:server:watch": "npm run test:server -- --watch"
  },
  "dependencies": {
    "app-module-path": "2.2.0",
    "atob": "2.0.3",
    "awilix": "0.3.1",
    "axios": "0.15.3",
    "babel-runtime": "6.22.0",
    "boom": "4.2.0",
    "btoa": "1.1.2",
    "bunyan": "1.8.5",
    "co-busboy": "1.3.1",
    "config": "1.24.0",
    "deep-extend": "0.4.1",
    "glob": "7.1.1",
    "history": "4.5.1",
    "kcors": "1.3.1",
    "koa": "^2.0.0-alpha.3",
    "koa-bodyparser": "3.2.0",
    "koa-compose": "3.2.1",
    "koa-connect-history-api-fallback": "0.3.1",
    "koa-convert": "^1.2.0",
    "koa-cors": "0.0.16",
    "koa-favicon": "2.0.0",
    "koa-helmet": "3.1.0",
    "koa-router": "^7.0.1",
    "koa-send": "3.3.0",
    "koa-static": "^3.0.0",
    "lodash": "4.17.4",
    "material-ui": "0.16.7",
    "node-cache": "4.1.1",
    "object-assign": "4.1.1",
    "qs": "6.3.0",
    "react": "^15.0.0",
    "react-dom": "^15.0.0",
    "react-redux": "5.0.2",
    "react-router": "2.8.1",
    "react-tap-event-plugin": "2.0.1",
    "redux": "3.6.0",
    "redux-saga": "0.14.3",
    "source-map-support": "0.4.10",
    "streamifier": "0.1.1",
    "unsemantic": "1.1.3",
    "yenv": "1.0.6"
  },
  "devDependencies": {
    "async": "2.1.4",
    "babel-cli": "6.22.2",
    "babel-core": "6.22.1",
    "babel-eslint": "7.1.1",
    "babel-jest": "18.0.0",
    "babel-loader": "6.2.10",
    "babel-plugin-react-display-name": "2.0.0",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-plugin-transform-runtime": "6.22.0",
    "babel-polyfill": "6.22.0",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-react": "6.22.0",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-1": "6.22.0",
    "babel-register": "6.22.0",
    "babel-root-import": "4.1.5",
    "browser-sync": "2.18.6",
    "chai": "3.5.0",
    "cheerio": "0.22.0",
    "colors": "1.1.2",
    "connect-history-api-fallback": "1.3.0",
    "cross-env": "3.1.4",
    "css-loader": "0.26.1",
    "eslint": "3.14.0",
    "eslint-plugin-flow-vars": "0.5.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-react": "6.9.0",
    "eslint-watch": "2.1.14",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.9.0",
    "flow-bin": "0.38.0",
    "icebug": "^0.1.5",
    "it-each": "0.3.1",
    "jest-cli": "18.1.0",
    "mocha": "3.2.0",
    "node-sass": "4.3.0",
    "nodemon": "1.11.0",
    "npm-run-all": "4.0.1",
    "open": "0.0.5",
    "pre-commit": "1.2.2",
    "proxy-middleware": "0.15.0",
    "react-test-renderer": "15.4.2",
    "redux-immutable-state-invariant": "1.2.4",
    "rimraf": "2.5.4",
    "sass-loader": "4.1.1",
    "sinon": "1.17.7",
    "sinon-chai": "2.8.0",
    "style-loader": "0.13.1",
    "supertest": "2.0.1",
    "url": "0.11.0",
    "webpack": "1.14.0",
    "webpack-dev-middleware": "1.9.0",
    "webpack-hot-middleware": "2.15.0",
    "webpack-merge": "2.4.0"
  },
  "pre-commit": [],
  "jest": {
    "verbose": true,
    "setupTestFrameworkScriptFile": "<rootDir>/src/client/lib/jest.globals.js",
    "moduleNameMapper": {
      "^.*[.](jpg|JPG|gif|GIF|png|PNG|less|LESS|css|CSS)$": "Empty"
    },
    "testPathDirs": [
      "<rootDir>/src/client"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/tools",
      "<rootDir>/docs"
    ]
  },
  "license": "ISC"
}
